extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/forms.css")

block content
    if errorMessage 
        div.alert.alert-danger.col-sm-7 #{errorMessage}
    form(action="/login" method="POST")
        input(type="hidden" name="_csrf" value=`${csrfToken}`)
        .form-group.row
            label(for="email").col-sm-2.col-form-label Email
            .col-sm-5.pr-0
                input(type="text" name="email").form-control#email
        .form-group.row
            label(for="password").col-sm-2.col-form-label Parola
            .col-sm-5.pr-0
                input(type="password" name="password").form-control#password
        
        .form-group.row
            .col-sm-5.offset-sm-2
                input(type="submit" value="Giriş Yap").btn.btn-primary
                a(href="/reset-password").btn.btn-secondary.ml-3 Parola Sıfırla