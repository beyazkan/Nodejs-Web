extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/forms.css")

block content
    form(action="/admin/edit-category" method="POST")
        input(type="hidden" name="id" value=`${category._id}`)
        .form-group.row
            label(for="name").col-sm-2.col-form-label Category Name
            .col-sm-10
                input(type="text" name="name" value=`${category.name}`).form-control#name
        .form-group.row
            label(for="description").col-sm-2.col-form-label Description
            .col-sm-10
                textarea#description(name="description" cols="30" rows="10" value=`${category.description}`).form-control
        
        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit" value="Save Category").btn.btn-primary